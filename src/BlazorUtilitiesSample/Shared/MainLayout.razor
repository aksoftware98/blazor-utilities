@inherits LayoutComponentBase

@using AKSoftware.Blazor.Utilities
@using BlazorUtilitiesSample.Pages

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <a href="/myaccount" target="_blank" class="ml-md-auto">Welcome @_username</a>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code
{

    private string _username = UserSettings.DefaultUsername;

    protected override void OnInitialized()
    {
        string newUsername = string.Empty;

        // Subscribe with the current instance of the component to username_updated message and update the value of the _username variable as a callback to the message
       MessagingCenter.Subscribe<MyAccount, string>(this, "username_updated", (sender, arg) =>
		{
			_username = arg;
			StateHasChanged();
		});
        base.OnInitialized();
    }

}
