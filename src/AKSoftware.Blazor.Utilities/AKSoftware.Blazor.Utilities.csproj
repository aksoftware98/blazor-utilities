<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Description>AKSoftware.Blazor.Utilities is a helper package that contains for now a MessagingCenter class that allows developers to write components and send data across them instantly if a super effice way.
MessaingCenter idea for Blazor was inspired from Xamarin.Forms's MessagingCenter</Description>
    <SynchReleaseVersion>false</SynchReleaseVersion>
    <PackageVersion>1.0</PackageVersion>
    <Authors>Ahmad Mozaffar</Authors>
    <Copyright>Ahmad Mozaffar 2021</Copyright>
    <PackageProjectUrl>https://github.com/aksoftware98/blazor-utlities</PackageProjectUrl>
    <PackageReleaseNotes>The first version that contains the support for the MessagingCenter class to be used to send data across components effeciently</PackageReleaseNotes>
    <PackageTags>aksoftware, blazor, messagingcenter, messagin, xamarin.forms</PackageTags>
    <Title>AKSoftware.Blazor.Utilities</Title>
    <PackageIcon>Blazor Utitlies.png</PackageIcon>
    <RepositoryUrl>https://github.com/aksoftware98/blazor-utilities</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  
  <ItemGroup>
    <None Include="LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  
  <ItemGroup>
    <EmbeddedResource Include="LICENSE" />
  </ItemGroup>
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.7" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Blazor Utitlies.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

